    <TextView
        android:id="@+id/transactionDateTextView"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:ellipsize="marquee"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="5dip"
        android:text="Description"
        android:textSize="12sp" 
        android:textColor="#000" />
     <TextView
        android:id="@+id/transactionAmountTextView"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/transactionDateTextView"
        android:gravity="center_vertical"
        android:layout_gravity="right"      
        android:ellipsize="marquee"
        android:text="Description"
        android:layout_marginRight="5dip"
        android:textSize="12sp" 
        android:textColor="#000" />
     <TextView
        android:id="@+id/transactionStatusTextView"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_gravity="center"
        android:layout_toRightOf="@id/transactionAmountTextView"
        android:ellipsize="marquee"
        android:text="Description"
        android:layout_marginRight="5dip"
        android:textSize="12sp" 
        android:textColor="#000" />
     <TextView
        android:id="@+id/recipientNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/transactionStatusTextView"
        android:gravity="center_vertical"
        android:ellipsize="marquee"
        android:layout_marginRight="10dip"
        android:text="Description"
        android:textSize="12sp" 
        android:textColor="#000" />
</RelativeLayout> 