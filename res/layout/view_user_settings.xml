<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <TextView
	        android:id="@+id/paymentSettingsTextView"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
    		android:textSize="15sp"
    		android:layout_marginTop="30dip"
			android:layout_marginLeft="20dip"
			android:textStyle="bold"
	        android:gravity="center_vertical"
	        android:layout_gravity="center_vertical"
	        android:text="Payment"
	         />
    
    <RelativeLayout  
        android:layout_width="match_parent"
	    android:layout_height="36dp"
	    android:background="#ffffff"
	    android:layout_marginTop="5dip"
	    android:layout_marginBottom="5dip"
	    
	    android:orientation="horizontal">
		<TextView
	        android:id="@+id/defaultAmountPerPayName"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:textSize="12sp" 
	        android:layout_marginLeft="20dip"
	        android:gravity="center_vertical"
	        android:layout_gravity="center_vertical"
    		android:layout_alignParentLeft="true"
	        android:text = "Default Amount Per Pay"   
	         />
	
	    <TextView
	        android:id="@+id/defaultAmountPerPayValue"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
    		android:layout_alignParentRight="true"
    		android:layout_marginRight="20dip"
	        android:gravity="center_vertical"
	        android:layout_gravity="center_vertical"
	        android:textSize="12sp" 
	        android:text="Description"
	         />
    </RelativeLayout>
    
    <RelativeLayout  
        android:layout_width="match_parent"
	    android:layout_height="36dp"
	    android:background="#ffffff"
	    android:layout_marginTop="5dip"
	    android:layout_marginBottom="5dip"
	    
	    android:orientation="horizontal">
		<TextView
	        android:id="@+id/maxAmountPerPayName"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
    		android:layout_alignParentLeft="true"
    		android:gravity="center_vertical"
	        android:layout_gravity="center_vertical"
    		android:textSize="12sp"
    		android:layout_marginLeft="20dip"
	        android:text = "Max Amount Per Pay"   
	         />
	
	    <TextView
	        android:id="@+id/maxAmountPerPayValue"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
    		android:layout_alignParentRight="true"
    		android:layout_marginRight="20dip"
	        android:gravity="center_vertical"
	        android:layout_gravity="center_vertical"
	        android:textSize="12sp"
	        android:text="Description"
	         />
    </RelativeLayout>
    <RelativeLayout  
        android:layout_width="match_parent"
	    android:layout_height="36dp"
	    android:background="#ffffff"
	    android:layout_marginTop="5dip"
	    android:layout_marginBottom="5dip"
	    
	    android:orientation="horizontal">
		<TextView
	        android:id="@+id/maxAmountDailyName"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
    		android:layout_alignParentLeft="true"
    		android:gravity="center_vertical"
	        android:layout_gravity="center_vertical"
    		android:textSize="12sp"
    		android:layout_marginLeft="20dip"
	        android:text = "Max Amount Daily"   
	         />
	
	    <TextView
	        android:id="@+id/maxAmountDailyValue"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:layout_marginRight="20dip"
    		android:layout_alignParentRight="true"
	        android:gravity="center_vertical"
	        android:layout_gravity="center_vertical"
	        android:textSize="12sp"
	        android:text="Description"
	         />
    </RelativeLayout>
    
    <TextView
	        android:id="@+id/privacySettingsTextView"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
    		android:textSize="15sp"
    		android:layout_marginTop="30dip"
    		android:layout_marginLeft="20dip"
	        android:gravity="center_vertical"
	        android:textStyle="bold"
	        android:layout_gravity="center_vertical"
	        android:text="Privacy"
	         />
    <RelativeLayout  
        android:layout_width="match_parent"
	    android:layout_height="36dp"
	    android:background="#ffffff"
	    android:layout_marginTop="5dip"
	    android:layout_marginBottom="5dip"
	    
	    android:orientation="horizontal">
		<TextView
	        android:id="@+id/receiveEmailUpdatesName "
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
    		android:layout_alignParentLeft="true"
    		android:gravity="center_vertical"
    		android:layout_marginLeft="20dip"
	        android:layout_gravity="center_vertical"
	        android:text = "Receive Email Updates"   
	        android:textSize="12sp"
	         />
	
	    <TextView
	        android:id="@+id/receiveEmailUpdatesValue"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
    		android:layout_alignParentRight="true"
    		android:layout_marginRight="20dip"
	        android:gravity="center_vertical"
	        android:layout_gravity="center_vertical"
	        android:textSize="12sp"
	        android:text="Description"
	         />
    </RelativeLayout>
    <RelativeLayout  
        android:layout_width="match_parent"
	    android:layout_height="36dp"
	    android:background="#ffffff"
	    android:layout_marginTop="5dip"
	    android:layout_marginBottom="5dip"
	    
	    android:orientation="horizontal">
		<TextView
	        android:id="@+id/receiveEmailNotificationName"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
    		android:layout_alignParentLeft="true"
    		android:layout_marginLeft="20dip"
    		android:gravity="center_vertical"
	        android:layout_gravity="center_vertical"
	        android:text = "Receive Email Notification"   
	        android:textSize="12sp"
	         />
	
	    <TextView
	        android:id="@+id/receiveEmailNotificationValue"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:layout_marginRight="20dip"
    		android:layout_alignParentRight="true"
    		android:textSize="12sp"
	        android:gravity="center_vertical"
	        android:layout_gravity="center_vertical"
	        android:text="Description"
	         />
    </RelativeLayout>
    <RelativeLayout  
        android:layout_width="match_parent"
	    android:layout_height="36dp"
	    android:background="#ffffff"
	    android:layout_marginTop="5dip"
	    android:layout_marginBottom="5dip"
	    
	    android:orientation="horizontal">
		<TextView
	        android:id="@+id/allowTransactionPublicName"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:layout_marginLeft="20dip"
    		android:layout_alignParentLeft="true"
    		android:gravity="center_vertical"
	        android:layout_gravity="center_vertical"
    		android:textSize="12sp"
	        android:text = "Allow Transaction Public"   
	         />
	
	    <TextView
	        android:id="@+id/allowTransactionPublicValue"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:layout_marginRight="20dip"
	        android:textSize="12sp"
    		android:layout_alignParentRight="true"
	        android:gravity="center_vertical"
	        android:layout_gravity="center_vertical"       
	        android:text="Description"
	         />
    </RelativeLayout>
	 
</LinearLayout>

