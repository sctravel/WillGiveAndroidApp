<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <LinearLayout  
        android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:background="#ffffff"
	    android:layout_marginTop="15dip"
	    android:layout_marginBottom="30dip"
	    
	    android:orientation="horizontal">
		<ImageView
	        android:id="@+id/userProfileIcon"
	        android:layout_width="60dp"
	        android:layout_height="60dp"
	        android:layout_marginTop="10dip"
	        android:layout_marginBottom="10dip"
	        android:layout_marginLeft="15dip"
	        android:layout_marginRight="15dip"
	         />
	
	    <TextView
	        android:id="@+id/userName"
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:layout_toRightOf="@id/userProfileIcon"
	        android:gravity="center_vertical"
	        android:ellipsize="marquee"
	        android:text="Description"
	        android:textSize="16sp" 
	        android:textColor="#000" />
    </LinearLayout>
    
    <LinearLayout  
        android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:background="#ffffff"
	    android:layout_marginTop="10dip"
	    
	    android:orientation="horizontal">
		<ImageView
	        android:id="@+id/userSettingsIcon"
	        android:layout_width="36dp"
	        android:layout_height="36dp"
	        android:layout_marginLeft="15dip"
	        android:layout_marginRight="15dip"
	        android:src="@drawable/ico_question"
	         />
	
	    <TextView
	        android:id="@+id/userSettingsName"
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:layout_toRightOf="@id/userProfileIcon"
	        android:gravity="center_vertical"
	        android:ellipsize="marquee"
	        android:text="Web Settings"
	        android:textSize="16sp" 
	        android:textColor="#000" />
    </LinearLayout>
    
    <LinearLayout  
        android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:background="#ffffff"
	    android:layout_marginTop="10dip"
	    android:layout_marginBottom="30dip"
	    android:orientation="horizontal">
		<ImageView
	        android:id="@+id/userTransactionsIcon"
	        
	        android:layout_width="36dp"
        	android:layout_height="36dp"
	        android:layout_marginLeft="15dip"
	        android:layout_marginRight="15dip"
	        android:src="@drawable/ic_action_locate"
	         />
	
	    <TextView
	        android:id="@+id/userTransactionsName"
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:layout_toRightOf="@id/userProfileIcon"
	        android:gravity="center_vertical"
	        android:ellipsize="marquee"
	        android:text="Transaction History"
	        android:textSize="16sp" 
	        android:textColor="#000" />
    </LinearLayout>
    
    <LinearLayout  
        android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal">
	    <!-- Login button -->
          <Button android:id="@+id/logoutButton"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:gravity="center"
                android:layout_gravity="bottom"
                android:background="@color/green_button"
                android:text="Logout"/>
    </LinearLayout>
</LinearLayout>
